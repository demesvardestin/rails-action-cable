<%= form_for message, remote: true, id: "text-message", authenticity_token: true do |f| %>
    <div class="row" style="border-top: 1px solid #e1e1e2;">
        <div class="col-md-9" style="padding-bottom: 0 !important;">
            <%= f.text_area :content, class: "form-control has-no-border font-14 no-box-shadow",
                id:"text-value", data: {textarea: "message"}, placeholder:"Type a message" %>
        </div>
        <%= f.hidden_field :chatroom_id, value: chatroom.id %>
        <div class="col-md-3" style="padding-bottom: 0 !important;">
            <%= f.submit "Send", class: "btn btn-primary btn-block font-14 no-box-shadow", data: {send: "message"} %>
        </div>
    </div>
<% end %>